<script>
  // Handle Help Button
  document.getElementById("helpBtn").addEventListener("click", function() {
    alert("This is the minimalist UI. The output field displays responses from the chatbot or system. Use the File IT button to save files, and the # button to tag messages.");
  });

  // Example Functionality for Tagging
  document.getElementById("tagButton").addEventListener("click", function() {
    let inputField = document.getElementById("chatInput");
    inputField.value += " #tag";  // Append a tag to the input field text.
  });
</script>

